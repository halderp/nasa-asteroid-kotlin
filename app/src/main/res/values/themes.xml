<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NasaAsteroid" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:statusBarColor">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="TextAppearance.Header1" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">#40141414</item>
        <item name="android:fontFamily">@font/artifika</item>
        <item name="fontFamily">@font/artifika</item>
    </style>
    <style name="TextAppearance.Header2" parent="TextAppearance.Header1">
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">textStart</item>
    </style>
    <style name="TextAppearance.Normal" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AlertDialogCustom" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Used for the background -->
        <item name="android:background">@color/white</item>
    </style>
</resources>